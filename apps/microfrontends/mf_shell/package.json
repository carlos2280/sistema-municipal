{
  "name": "mf-shell",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite --port 5000 --strictPort --mode development",
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "build:watch": "vite build --watch --mode development",
    "start": "node server.js",
    "preview": "vite preview --port 5000 --strictPort --mode development",
    "serve-local": "pnpm build && pnpm start",
    "dev:watch": "pnpm build && pnpm build:watch",
    "lint": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "check": "biome check --write ./src",
    "dev:micro": "vite --port 5000 --strictPort --mode development --force",
    "commit": "cz"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^5.0.1",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@mui/x-tree-view": "^8.5.1",
    "@reduxjs/toolkit": "2.8.2",
    "@toolpad/core": "^0.15.0",
    "@xyflow/react": "^12.7.0",
    "add": "^2.0.6",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "lucide-react": "^0.513.0",
    "pnpm": "^10.12.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.57.0",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.1",
    "redux-persist": "^6.0.0",
    "serve": "^14.2.4",
    "slugify": "^1.6.6",
    "sonner": "^2.0.5",
    "zod": "^3.25.49"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/redux-persist": "^4.3.1",
    "@vitejs/plugin-react": "^4.4.1",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.4.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "biome check --apply"
  }
}