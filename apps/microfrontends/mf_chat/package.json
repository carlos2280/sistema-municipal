{
  "name": "mf-chat",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite build --mode development && vite preview --port 5021 --strictPort",
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "build:watch": "vite build --watch --mode development",
    "start": "node server.js",
    "preview": "vite preview --port 5021 --strictPort --mode development",
    "serve-local": "pnpm build && pnpm start",
    "lint": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "check": "biome check --write ./src"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^7.1.2",
    "@mui/icons-material": "^7.1.2",
    "@reduxjs/toolkit": "^2.8.2",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.1",
    "socket.io-client": "^4.7.5",
    "sonner": "^2.0.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@types/node": "^22.18.12",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "cross-env": "^7.0.3",
    "globals": "^16.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  }
}
