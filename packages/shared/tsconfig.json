{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"declaration": true,
		"emitDeclarationOnly": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": false,
		"isolatedModules": true,
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"@municipalidad/shared/*": ["src/*"]
		}
	},
	"include": ["src"]
}
