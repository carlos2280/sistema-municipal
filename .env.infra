# ============================================
# Sistema Municipal - Variables de Infraestructura
# ============================================
# Variables compartidas para TODOS los servicios
# NO contiene secrets - solo configuración de conexión
# ============================================

# Entorno
NODE_ENV=development

# PostgreSQL - Conexión
DB_HOST=localhost
DB_PORT=5434
DB_NAME=municipal
DB_SSL=false
DB_POOL_MIN=1
DB_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Mail (Mailhog en desarrollo)
SMTP_HOST=localhost
SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# Puertos de APIs
API_GATEWAY_PORT=3000
API_IDENTIDAD_PORT=3001
API_CONTABILIDAD_PORT=3002
API_AUTORIZACION_PORT=3003

# Puertos de Microfrontends
MF_SHELL_PORT=5000
MF_STORE_PORT=5010
MF_UI_PORT=5011
MF_CONTABILIDAD_PORT=5020

# URLs base (desarrollo)
API_GATEWAY_URL=http://localhost:3000
API_IDENTIDAD_URL=http://localhost:3001
API_CONTABILIDAD_URL=http://localhost:3002
API_AUTORIZACION_URL=http://localhost:3003
